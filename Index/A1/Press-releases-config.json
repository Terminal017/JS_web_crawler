{
  "startUrls": ["https://www.congress.gov.ph/media/press-releases/"],
  "selectors": {
    "listPage": {
      "items": "a[href*='/media/press-releases/view/']",
      "maxPages": 941,
      "dynamicPagination": {
        "nextButton": "ul.pagination > li.next > a",
        "waitTime": 10000,
        "hasNextPage": "ul.pagination > li.next > a:not(.disabled)",
        "retryAttempts": 3,
        "retryDelay": 5000
      },
      "itemLink": {
        "selector": ".",
        "extract": "attribute",
        "attribute": "href"
      }
    },
    "detailPage": {
      "fields": {
        "id": {
          "default": "{{filename}}"
        },
        "title": {
          "selector": "#main-view > div.container.items-start.aos-init.aos-animate > section > div > div > div.mb-2 > div",
          "extract": "text"
        },
        "href": {
          "default": "{{currentUrl}}"
        },
        "content": {
          "type": "object",
          "fields": {
            "datetime": {
              "selector": "div.mb-2 > span",
              "extract": "text",
              "default": "unknown"
            },
            "article": {
              "selector": "#main-view section div div div:last-child",
              "extract": "text"
            }
          }
        },
        "PDF": {
          "selector": "PDF链接",
          "extract": "attribute",
          "attribute": "href",
          "default": null
        }
      }
    }
  },
  "output": {
    "type": "json",
    "path": "./data/A1/Press-releases.json"
  },
  "behavior": {
    "requestDelay": 4000,
    "timeout": 150000,
    "retryAttempts": 3,
    "retryDelay": 6000,
    "javascript": true,
    "browserType": "chromium",
    "headless": true,
    "fastMode": false,
    "waitForNetworkIdle": true,
    "headers": {
      "User-Agent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8",
      "Accept-Language": "en-US,en;q=0.9"
    }
  },
  "postProcess": {
    "transformOutput": true,
    "outputFormat": {
      "id": "$.id",
      "title": "$.title",
      "href": "$.href",
      "content": {
        "datetime": "$.content.datetime",
        "article": "$.content.article"
      },
      "PDF": "$.PDF"
    }
  }
}
