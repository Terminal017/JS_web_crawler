{
  "startUrls": [
    "https://web.senate.gov.ph/lis/journal.aspx?congress=19&session=1R&q=77"
  ],
  "selectors": {
    "listPage": {
      "items": "ul.lis_ul > li",
      "maxPages": 1,
      "itemLink": {
        "selector": "a",
        "extract": "attribute",
        "attribute": "href"
      }
    },
    "detailPage": {
      "fields": {
        "id": {
          "default": "{{filename}}"
        },
        "title": {
          "selector": "div.lis_doctitle > p",
          "extract": "text"
        },
        "href": {
          "default": "{{currentUrl}}"
        },
        "content": {
          "type": "object",
          "fields": {
            "author": {
              "selector": "作者选择器",
              "extract": "text",
              "default": "unknown"
            },
            "article": {
              "selector": "#content > blockquote",
              "extract": "text"
            }
          }
        },
        "PDF": {
          "selector": "#lis_download > ul > li > a",
          "extract": "attribute",
          "attribute": "href"
        }
      }
    }
  },
  "output": {
    "type": "json",
    "path": "./data/A2/B1-config.json"
  },
  "behavior": {
    "requestDelay": 2000,
    "timeout": 30000,
    "javascript": true,
    "browserType": "chromium",
    "fastMode": true,
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
      "Accept-Language": "zh-CN,zh;q=0.9,en;q=0.8"
    }
  },
  "postProcess": {
    "transformOutput": true,
    "outputFormat": {
      "id": "$.id",
      "title": "$.title",
      "href": "$.href",
      "content": {
        "author": "$.content.author",
        "article": "$.content.article"
      },
      "PDF": "$.PDF"
    }
  }
}
