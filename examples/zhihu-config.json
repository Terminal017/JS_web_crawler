{
  "startUrls": ["https://www.zhihu.com/topic/19550517/hot"],
  "selectors": {
    "listPage": {
      "items": ".List-item",
      "nextPage": ".PaginationButton-next",
      "maxPages": 3
    },
    "detailPage": {
      "fields": {
        "title": {
          "selector": ".QuestionHeader-title",
          "extract": "text"
        },
        "author": {
          "selector": ".AuthorInfo-name",
          "extract": "text"
        },
        "content": {
          "selector": ".RichContent-inner",
          "extract": "html"
        },
        "voteCount": {
          "selector": ".VoteButton--up .Button-label",
          "extract": "text"
        },
        "commentCount": {
          "selector": ".QuestionHeader-Comment button",
          "extract": "text"
        },
        "tags": {
          "selector": ".QuestionHeader-topics .Tag",
          "extract": "text",
          "multiple": true
        },
        "publishTime": {
          "selector": ".ContentItem-time span",
          "extract": "text"
        }
      }
    }
  },
  "output": {
    "type": "json",
    "path": "./data/zhihu-ai-questions.json"
  },
  "behavior": {
    "requestDelay": 2000,
    "timeout": 30000,
    "javascript": true,
    "browserType": "chromium",
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
    "headers": {
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
      "Accept-Language": "zh-CN,zh;q=0.9,en;q=0.8"
    }
  }
}